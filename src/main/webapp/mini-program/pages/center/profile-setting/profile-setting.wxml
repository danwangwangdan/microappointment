<view class="container">
  <view class="page-body">
    <view class="page-section">
      <block wx:if="{{userInfo.avatarUrl && uploadFlag}}">
        <image src="{{userInfo.avatarUrl}}" class="image1" mode="aspectFit"></image>
        <button class="weui-btn" type="primary" plain="true" bindtap='changeUploadFlag'>选择图片</button>
      </block>

      <block wx:else>
        <view class="page-body-info">
          <view class="image-plus image-plus-nb">
            <view class="image-plus-horizontal"></view>
            <view class="image-plus-vertical"></view>
          </view>
          <view class="image-plus-text" bindtap="chooseImage">选择图片</view>
        </view>
      </block>
      <view class="section section-spacer">
      </view>
      <view class="weui-cells__title">修改昵称</view>
      <view class="weui-cells weui-cells_after-title">
        <view class="weui-cell weui-cell_input">
          <view class="weui-cell__bd">
            <input class="weui-input" placeholder="" />
          </view>
        </view>
      </view>

      <view class="weui-btn-area">
        <button class="weui-btn" type="primary" bindtap="showTopTips">确定</button>
      </view>
    </view>
  </view>
</view>